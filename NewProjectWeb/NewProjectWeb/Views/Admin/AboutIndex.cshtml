@using NewProjectWeb.Models.Classes
@model List<About>
@{
    ViewBag.Title = "AboutIndex";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h1>HAKKIMIZDA</h1>
<br />

<table class="table table-hover">
    <tr>
        <th>Açıklama</th>
        <th>Resim</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Description</td>
            @*<td>@item.Photo</td>*@
            <td><img src="@item.Photo" alt="Alternate Text" width="100" height="100" /></td>
            <td><a href="/Admin/GetAbout/@item.ID" class="btn btn-warning">Güncelle</a></td>
        </tr>

    }
</table>

