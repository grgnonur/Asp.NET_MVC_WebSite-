@using NewProjectWeb.Models.Classes
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<br />
<h2>ÜRÜNLER LİSTESİ</h2>
<br />
<br />
<table class="table table-hover">
    <tr>
        <th>Ürün İsmi</th>
        <th>Ürün Açıklaması</th>
        <th>Ürün Resmi</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductName</td>
            <td>@item.ProductDescription</td>
            <td><img src="@item.ProductImage" alt="Alternate Text" height="75" width="100" /></td>
            <td><a href="/Admin/DeleteProduct/@item.ID" class="btn btn-danger">SİL</a></td>
            <td><a href="/Admin/GetProduct/@item.ID" class="btn btn-warning">GÜNCELLE</a></td>
        </tr>
    }

</table>

<a href="/Admin/CreateProduct" class="btn btn-info">Yeni Ürün Ekle</a>

