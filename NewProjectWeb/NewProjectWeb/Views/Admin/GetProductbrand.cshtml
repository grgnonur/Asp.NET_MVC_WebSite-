@model NewProjectWeb.Models.Classes.Productbrand
@{
    ViewBag.Title = "GetProductbrand";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h1>HAKKIMIZDA GÜNCELLEME</h1>

@using (Html.BeginForm("UpdateProductbrand", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.LabelFor(x => x.ID, new { @hidden = "hidden" })
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly", @hidden = "hidden" })
    <br />
    <label><strong>Görsel :</strong></label>
    <input type="file" name="ProductbrandImage" />
    <br />
    @Html.ValidationMessageFor(x => x.ProductbrandImage, "", new { @style = "color:red" })
    <br />

    <button class="btn btn-info">Kaydet</button>
}

