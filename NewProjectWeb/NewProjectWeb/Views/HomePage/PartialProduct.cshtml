@using NewProjectWeb.Models.Classes
@model List<Product>

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />



<div class="con-bot" style="width:auto; height:auto; text-align:center ">
    <h1 style="text-align:center">ÜRÜNLER</h1>
    <br /><br />
    @foreach (var item in Model)
    {
        <div style="width:29%;float:left;" class="left">
            <div class="bot-left">
                <div class="text-center">
                    <img src="@item.ProductImage" alt="" width="200" height="300" />
                    <br /><br /><br /><br />
                </div>
                <div class="left-text">
                    <h4>@item.ProductName.Substring(0,10)</h4>
                    <p>@item.ProductDescription.Substring(0, 10)<a href="/Product/DetailProduct/@item.ID" type="button" class="btn btn-light"><span class="icon icon-double-angle-right"></span></a></p>
                </div>
            </div>
        </div>
    }
    <br /><br /><br />
    <div style="text-align:center">
        <p style="text-align:center"><a href=/Product/Index class="btn btn-info" style="border-radius:10px;">Tüm Ürünleri Gör</a></p>
    </div>
</div>






